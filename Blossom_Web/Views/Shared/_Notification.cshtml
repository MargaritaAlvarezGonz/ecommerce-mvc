
<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>

@if(TempData["successful"] !=null)
{
    <script>
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: '@TempData["successful"]',
            showConfirmButton: false,
            timer: 3000
        })
     </script>
}

@if (TempData["error"] != null)
{
    <script>
        Swal.fire({
            position: 'top-end',
            icon: 'error',
            title: '@TempData["error"]',
            showConfirmButton: false,
            timer: 3000
        })
    </script>
}