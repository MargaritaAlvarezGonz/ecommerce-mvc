@using Microsoft.AspNetCore.Components
@model Blossom_Web.Models.ViewModel.BlossomPagesViewModel


@{
    ViewData["Title"] = "Home Page";
}


<div class="row" style="--bs-gutter-x:0">
    @foreach (var blossom in Model.BlossomList)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row" style="border-radius:20px; border: 1px solid">
                <div class="col-4">
                    <img class="d-block w-100 mt-2" style="border-radius:20px;" src="@blossom.ImageUrl" alt="Image Product">
                </div>
                <div class="col-8">
                    <p class="card-title text-info" style="font-size:xx-large">@blossom.Name</p>
                    <p class="card-text">@((MarkupString)blossom.ProductDescrip)</p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <div class="ccol-12 col-sm-4">
                            <a href="" class="btn btn-primary form-control btn-block">Buy</a>
                        </div>
                        
                        <div class="col-12 col-sm-4">
                            <span class="text-info float-end font-weight-bold pt-1 fw-bold" style="font-size:18px">
                                Usd
                                <span style="border-bottom:1px solid #0323EE">@blossom.Price.ToString("c")</span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<a asp-action="Index"
   asp-route-pageNumber="@(1)" class="btn btn-outline-primary  000000">
    <i class="bi bi-skip-start-fill"></i>
</a>
<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageNumber - 1)" class="btn btn-outline-primary @Model.Previous">
    Anterior
</a>
<span>Pagina @Model.PageNumber de @Model.TotalPages </span>
<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageNumber + 1)" class="btn btn-outline-primary @Model.Next">
    Siguiente
</a>
<a asp-action="Index"
   asp-route-pageNumber="@Model.TotalPages" class="btn btn-outline-primary">
    <i class="bi bi-skip-end-fill"></i>
</a>
